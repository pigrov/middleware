<%- include('../parts/header', {title, book}) %> <%- include('../parts/menu') %> <%=
console.log(title, book) %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        <form method="POST" class="mt-5">
            <div class="form-group mb-3">
                <label for="inputTitle">Заголовок</label>
                <input
                    type="text"
                    name="title"
                    value="<%= book.title %>"
                    class="form-control"
                    id="inputTitle"
                    disabled
                    readonly
                />
            </div>
            <div class="form-group mb-3">
                <label for="inputAuthors">Авторы</label>
                <input
                    type="text"
                    name="authors"
                    value="<%= book.authors %>"
                    class="form-control"
                    id="inputAuthors"
                    disabled
                    readonly
                />
            </div>
            <div class="form-group mb-3">
                <label for="inputDescription">Описание</label>
                <input
                    type="text"
                    name="description"
                    value="<%= book.description %>"
                    class="form-control"
                    id="inputDescription"
                    disabled
                    readonly
                />
            </div>

            <div class="form-group mb-3 text-right">
                <button type="submit" class="btn btn-primary">Скачать</button>
            </div>
        </form>
    </div>
</div>

<%- include('../parts/footer') %>
